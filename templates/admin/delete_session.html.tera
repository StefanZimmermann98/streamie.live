    <script>
        document.getElementById('delete_session_form').addEventListener(
        "submit",
            async function(e){
            e.preventDefault();
            var t = document.getElementById("test");
            return await fetch("/session/delete/"+ t.value,{
            method: 'DELETE',
            });
            });

    </script>